	[null, null, null, null, null], 
	[releather, <ore:plateIron>, <ore:plateIron>, <ore:plateIron>, releather], 
	[releather, releather, <ironchest:iron_chest>, releather, releather], 
	[releather, <ore:plateIron>, <v0idssmartbackpacks:backpack>, <ore:plateIron>, releather], 
	[releather, releather, releather, releather, releather]
]);


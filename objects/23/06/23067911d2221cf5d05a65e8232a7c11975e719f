var releather = <v0idssmartbackpacks:reinforced_leather>;

// Tool-tip Warning ===============================================================================
<v0idssmartbackpacks:backpack>.addTooltip(format.green("Shift + B to Equip / B to open"));
<v0idssmartbackpacks:backpack>.addTooltip(format.red("Remove the content before you upgrade your backpack! Otherwise everything is lost... :O"));
<v0idssmartbackpacks:backpack>.addTooltip(format.green("Surround with dye in crafting grid to change color"));

<v0idssmartbackpacks:backpack_reinforced>.addTooltip(format.green("Shift + B to Equip / B to open"));
